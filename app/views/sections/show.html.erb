<div class="chapter-section">
	<ul class="breadcrumb-spl">
	  <li><%= link_to "All Books", books_path %></li>
	  <li>
      <%= link_to book_path(@book), data: { "toggle" => "tooltip", "placement" => "top", "title" => "book"} do %>
        <span class='fa fa-book'></span>
        <%= @book.name %>
      <% end %>
    </li>  
    <li>
      <%= link_to book_chapter_path(@book, @chapter), data: { "toggle" => "tooltip", "placement" => "top", "title" => "chapter"} do %>
        <span class='fa fa-file'></span>
        <%= @chapter.name %>
      <% end %>
    </li>
    <li>
      <%= link_to book_chapter_section_path(@book, @chapter, @section), data: { "toggle" => "tooltip", "placement" => "top", "title" => "section"} do %>
        <span class='fa fa-file-text'></span>
        <%= @section.name %>
      <% end %>
    </li>   
	</ul>
	<div class="section-cover">		
		<p id="section-time">Created on <%= @section.created_at.strftime("%b #{@section.created_at.day.ordinalize}, %Y") %> | Updated <%= time_ago_in_words(@section.updated_at) %> ago</p>
		<p id="section-tags"> Tags: <%= sanitize @section.tag_list.map { |t| link_to t, tag_path(t), class: "label label-default" }.join(' ') %></p>
	</div>	
</div>

<p>
  <%= link_to edit_book_chapter_section_path(@book, @chapter, @section), class: "btn btn-success right section-btn" do %>
    <span class="glyphicon glyphicon-edit"></span>
    Edit
  <% end %>
</p>

<div id="section-description"><%= sanitize (@section.description) %></div>
