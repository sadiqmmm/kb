<ul class="breadcrumb-spl">
    <li><%= link_to "All Books", books_path %></li>     
</ul>
<div class="index-book-cover">
  <b>Total:</b> 
  <span class= 'book-total'><%= pluralize( @books.all.size, "Book") %></span>
  <p class="overflow-auto">
    <%= link_to new_book_path, class: "btn btn-primary right" do %>
      <span class="fa fa-book"></span>
      Add Book
    <% end %> 
  </p>  
  <div class="sort-links">
    <b>Sort:</b>
    <a href="#">Alphabet</a> |
    <a href="#">Created</a> |
    <a href="#">Updated</a> |
    <a href="#">Default</a>    
  </div>
</div>

<% if @books.present? %>

  <table class="table table-hover">

    <% @books.each do |book| %>       
      <tr class="book">
        <td>
          <%= link_to book, class: "book-link" do %>
            <span class="fa fa-book fa-2x"></span>
            <%= book.name %>
          <% end %>     
          <span class="book-access-links hide">
              <%= link_to edit_book_path(book) do %>
                <span class="glyphicon glyphicon-edit"></span> Edit     
              <% end %>             
            </span>
        </td>
      </tr>
    <% end %>

  </table>
<% else %>
  <h1>No books</h1>
<% end %>