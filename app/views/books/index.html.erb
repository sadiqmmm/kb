<%= link_to 'New book', new_book_path, class: "btn btn-primary right" %>

<h1>All books</h1>
<table class="table table-hover">

  <% @books.each do |book| %>       
    <tr class="book">
      <td>
        <%= link_to book.name, book, class: "book-link"%>     
        <span class="access-links hide">
            <%= link_to edit_book_path(book) do %>
              <span class="glyphicon glyphicon-edit"></span>      
            <% end %>             
          </span>
      </td>
    </tr>
  <% end %>

</table>