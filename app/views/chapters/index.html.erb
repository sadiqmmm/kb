<%= link_to 'New chapter', new_book_chapter_path, class: "btn btn-warning right" %>

<h1>All chapters</h1>
<table class="table table-hover">

  <% @chapters.each do |chapter| %>       
    <tr class="chapter">
      <td>
        <%= link_to chapter.name, class: "chapter-link"%>     
        <span class="access-links hide">
            <%= link_to edit_book_chapter_path(chapter) do %>
              <span class="glyphicon glyphicon-edit"></span>      
            <% end %>             
          </span>
      </td>
    </tr>
  <% end %>

</table>